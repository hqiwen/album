/* compontent/popup.wxss */
.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 3;
  background: rgb(168, 162, 162); 
}

.popup {
  position: absolute;
  top:50%;
  left: 50%;
  z-index: 5;
  transform: translate(-50%, -50%);
  border: black 3rpx solid;
  width: 70%;
}

.popup:hover {
 box-shadow: bisque 3rpx 3rpx;
}

.title {
  color: rgb(127, 209, 106);
  border-bottom: black 3rpx solid;
}

.content {
  padding: 40rpx;
}

.btn {
  display: flex;
}

.btn button {
  margin: 20rpx auto;
}